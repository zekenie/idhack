<% include ../header %>

<div class="page-header">
	<h1>New Patient</h1>
</div>
<form method="post" role="form" action="/patients/create">
    <div class="form-group">
        <div class='form-group'>
        	<label for="first">First</label>
        	<input autofocus type="text" name="first" placeholder= "First Name" class="form-control">
        </div>
        <div class='form-group'>
        	<label for="last">Last</label>
        	<input type="text" name="last" placeholder="Last Name" class="form-control">
        </div>
        <div class="form-group">
        	<label for="sex">Sex</label>
        	<select class="form-control" name="sex">
        		<option></option>
        		<option>f</option>
        		<option>m</option>
        	</select>
        </div>
        <div class="form-group">
        	<label for="height">Height</label>
        	<input class="form-control" type="text" name="height" placeholder="x meters">
        </div>
        <div class="form-group">
        	<label for="weight">Weight</label>
        	<input class="form-control" type="text" name="weight" placeholder="x kg">
        </div>
        <div class='form-group'>
        	<label for="bed">Bed</label>
        	<input type="text" name="bed" placeholder="Bed Number (leave blank for out patient)" class="form-control">
        </div>
        <div class='form-group'>
        	<label for="dob">Date of Birth</label>
        	<input type="text" name="dob" placeholder="Date of Birth" class="form-control">
        </div>
        <div class='form-group'>
        	<label for="pin">pin</label>
        	<input type="password" name="pin" placeholder="PIN" class="form-control">
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>

<% include ../footer %>
